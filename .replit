modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["nodejs_20"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Development Server"

[[workflows.workflow]]
name = "Frontend Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm run dev"
waitForPort = 5008

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5008
externalPort = 80

[[ports]]
localPort = 41101
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["pnpm", "preview", "--host", "0.0.0.0"]
build = ["pnpm", "build"]
